<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblMisión"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Club Ítalo Venezolano"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/material_grey_600"
            android:textSize="25dp"
            android:textStyle="bold" />

        <italo.com.app.italomovil.widgets.MaterialRoundedImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/noimage"
            android:id="@+id/imgInicio"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/lblNoticiasTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Ultimas Noticias"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/material_grey_600"
            android:textSize="25dp"
            android:textStyle="bold" />

        <italo.com.app.italomovil.widgets.NonScrollListView
            android:id="@+id/listViewNoticias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>