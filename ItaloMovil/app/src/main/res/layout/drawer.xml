<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/left_drawer"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:weightSum="5"
    android:background="@color/principal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.3">

        <italo.com.app.italomovil.widgets.MaterialRoundedImageView
            android:id="@+id/imgPerfil"
            android:src="@drawable/nouser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            app:sriv_left_bottom_corner_radius="10dp"
            app:sriv_left_top_corner_radius="10dp"
            app:sriv_oval="true"
            app:sriv_right_bottom_corner_radius="10dp"
            app:sriv_right_top_corner_radius="10dp"/>

        <TextView
            android:id="@+id/txtNombreSocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold"
            android:lines="2"
            android:layout_below="@id/imgPerfil"
            android:padding="5dp"
            android:text="PANCHITO PEREZ"/>

        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3.8"
        android:orientation="vertical"
        android:background="@color/White"
        android:paddingBottom="5dp"
        android:weightSum="4">

        <TextView
            android:id="@+id/txtOpcion1"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/iconoperaciones"
            android:text="   Opcion 1"
            android:textColor="@color/yellowcolor"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtOpcion2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/iconoperaciones"
            android:text="   Opcion 2"
            android:textColor="@color/yellowcolor"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtOpcion3"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/iconoperaciones"
            android:text="   Opcion 3"
            android:textColor="@color/yellowcolor"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtOpcion4"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/iconsetting24dp"
            android:text="   Opcion 4"
            android:textColor="@color/yellowcolor"
            android:textSize="20sp"

            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/yellowcolor"
            android:drawableLeft="@drawable/iconcandado24dp"
            android:textSize="20sp"
            android:text="   Opcion 5"
            android:id="@+id/txtOpcion5"
            android:textStyle="bold" />

    </LinearLayout>





</LinearLayout>