<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INICIO"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/textView6"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:id="@+id/imageView6"
            android:src="@drawable/piscina"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="1"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:src="@drawable/parque_infantil"
            android:id="@+id/imageView13"
            android:layout_row="0"
            android:layout_column="1"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:src="@drawable/salon_de_orquestas_"
            android:id="@+id/imageView8"
            android:layout_row="0"
            android:layout_column="2"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:src="@drawable/gimnasio"
            android:id="@+id/imageView12"
            android:layout_row="1"
            android:layout_column="0"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:src="@drawable/futbol"
            android:id="@+id/imageView10"
            android:layout_row="1"
            android:layout_column="1"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:src="@drawable/natacion"
            android:id="@+id/imageView15"
            android:layout_row="1"
            android:layout_column="2"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:src="@drawable/restaurante"
            android:id="@+id/imageView11"
            android:layout_row="2"
            android:layout_column="0"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:src="@drawable/salon_fiestas"
            android:id="@+id/imageView14"
            android:layout_row="2"
            android:layout_column="1"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:src="@drawable/jardin"
            android:id="@+id/imageView9"
            android:layout_row="2"
            android:layout_column="2"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:id="@+id/imageView7"
            android:src="@drawable/cancha_futbol"
            android:layout_row="3"
            android:layout_column="1"/>

    </GridLayout>

</LinearLayout>